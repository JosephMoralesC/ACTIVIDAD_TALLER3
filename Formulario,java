    private void btnCalcularActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnCalcularActionPerformed
        Empleado empleado1 = new Empleado();
        
        
        empleado1.horasTrabajadas = Double.parseDouble(txtHorasTrabajadas.getText());
        empleado1.valorHora = Double.parseDouble(txtValorHora.getText());
        empleado1.retencion = Double.parseDouble(txtPorcentajeRetencion.getText());
       
        empleado1.salarioBruto();
        empleado1.salarioNeto();
        
        txtSalarioBruto.setText(String.valueOf((int)empleado1.salarioB));
        txtSalarioNeto.setText(String.valueOf((int)empleado1.salarioN));

    }//GEN-LAST:event_btnCalcularActionPerformed

    private void btnSalirActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnSalirActionPerformed
